local esp = Drawing.new("Text");
esp.Size = 25;
esp.Text = "Advantage";
esp.Color = Color3.new(255,0,0)

runService.RenderStepped:Connect(function()
    for i,v in pairs(workspace:GetDescendants()) do
        if v:IsA("TouchTransmitter") and v.Parent:IsA("MeshPart") and v.Parent.Parent:IsA("Model") and v.Parent.Parent.Parent:IsA("MeshPart") and v.Parent.Parent.Parent.Parent:IsA("Model") then
            local vpp, cansee = cam:WorldToViewportPoint(v.Parent.Position);

            if cansee then
                esp.Position = Vector2.new(vpp.X,vpp.Y);
            end
            
        end;
    end;
end);


